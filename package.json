{
  "name": "tv-tracker",
  "version": "1.0.0",
  "description": "Track your tv watching time",
  "scripts": {
    "install": "yarn install:server && yarn install:client",
    "install:server": "cd server && yarn",
    "install:client": "cd client && yarn",
    "build:client": "cd client && yarn build",
    "start": "cd server && node index.js",
    "test": "yarn test:client && yarn test:server",
    "test:server": "cd server && NODE_ENV=test yarn test",
    "test:client": "cd client && yarn install --silent && yarn test",
    "heroku-postbuild": "yarn build:client"
  },
  "author": "agonzalez0515",
  "license": "ISC",
  "engines": {
    "node": "10.16.3",
    "npm": "6.9.0"
  }
}
